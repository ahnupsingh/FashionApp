<p id="notice"><%= notice %></p>

<h1>Bills</h1>

<table>
  <thead>
    <tr>
      <th>Bill no</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Advance</th>
      <th>Grand total</th>
      <th>Is complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.bill_no %></td>
        <td><%= bill.quantity %></td>
        <td><%= bill.total %></td>
        <td><%= bill.advance %></td>
        <td><%= bill.grand_total %></td>
        <td><%= bill.is_complete %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

